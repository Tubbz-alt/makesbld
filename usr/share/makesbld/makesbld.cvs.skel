build_pkg() {
	# Build the package:
	cd $PKG
	## add -p to preserve doinst.sh if created above

	$NICE makepkg -l y -c n $PKG_DIR/$PKG_NAME || die "error: package creation"
	echo "$NAME has been compiled and a package created in $PKG_DIR"
	return
}

# call functions
get_args "$@"	# process command line
